@model JRSystem.Models.Application

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


<div>
    <h4>Application</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Message
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>

    </dl>
</div>
<div>
    @*<a asp-action="Edit" asp-route-id="@Model?.ApplicationId">Edit</a> |*@
    <a class="btn btn-primary" asp-controller="file" asp-action="ShowFiles" asp-route-FileId=@Model?.FileId>Check files uploaded</a> |
    <button class="btn btn-primary" type="button" id="backButton">Back</button>

    
</div>

<script>
    document.getElementById('backButton').addEventListener('click', function () {
        history.back();
    });
</script>